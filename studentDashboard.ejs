<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Student Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css"> <link rel="stylesheet" href="/studentadmin.css"> </head>
<body>
    <%- include('studentnav.ejs') %> <div class="student-main-content">
        <header class="student-header">
            <h1>Student Dashboard</h1>
            <div>
                <a href="/studentlogout" class="btn btn-secondary btn-sm">Logout</a>
            </div>
        </header>

        <section class="container mt-4">
            <div class="student-card-grid">
                <div class="student-card">
                    <h2>Total Exams Enrolled</h2>
                    <div class="value">5</div> </div>
                <div class="student-card">
                    <h2>Upcoming Exams</h2>
                    <div class="value">2</div> </div>
                <div class="student-card">
                    <h2>Exams Completed</h2>
                    <div class="value">3</div> </div>
                <div class="student-card">
                    <h2>Overall Percentage</h2>
                    <div class="value">78%</div> </div>
            </div>

            <div class="student-table-wrapper mt-5">
                <h2>Recent Exam Results</h2>
                <table class="student-table">
                    <thead>
                        <tr>
                            <th>Exam Name</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Score</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Mathematics Aptitude</td>
                            <td>Mathematics</td>
                            <td>2025-06-10</td>
                            <td>85/100</td>
                            <td class="status-active">Passed</td>
                        </tr>
                        <tr>
                            <td>Physics Basics</td>
                            <td>Physics</td>
                            <td>2025-06-05</td>
                            <td>60/100</td>
                            <td class="status-active">Passed</td>
                        </tr>
                        <tr>
                            <td>Chemistry Foundations</td>
                            <td>Chemistry</td>
                            <td>2025-05-28</td>
                            <td>40/100</td>
                            <td class="status-pending">Failed</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</body>
</html>